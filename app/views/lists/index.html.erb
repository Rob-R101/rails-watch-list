<div class="container">
  <h1>Your Lists</h1>
  <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>
  <ul class="movie-list">
    <% @lists.each do |list| %>
      <li>
        <%= link_to list.name, list_path(list) %>
        <%= button_to "Delete", list_path(list), method: :delete, class: "btn btn-danger" %>
      </li>
    <% end %>
  </ul>
</div>
